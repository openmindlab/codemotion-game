@import "../styl/main.styl"

button-circle-shadow = 0px 0px 30px
button-box-shadow    = 0px 0px 40px

.choice-button
  position      relative
  width         100%
  padding       size-xl
  min-height    150px
  min-width     350px
  background    color-white
  border        none
  border-radius size-xs
  font-size     size-l
  transition    ease 0.5s

  &:hover
    transform scale(1.1)

  &.allover-green
    color      color-white
    background color-green
    box-shadow button-box-shadow rgba(36, 236, 179, 0.45)

  &.allover-red
    color      color-white
    background color-pink
    box-shadow button-box-shadow rgba(222, 114, 125, 0.45)

  &.red
    box-shadow button-box-shadow rgba(222, 114, 125, 0.45)

  &.green
    box-shadow button-box-shadow rgba(36, 236, 179, 0.45)

  &.yellow
    box-shadow button-box-shadow rgba(255, 205, 27, 0.45)

  &.blue
    box-shadow button-box-shadow rgba(12, 134, 255, 0.45)

  .button-circle
    display       block
    position      absolute
    bottom        0
    left          calc(50% - 35px)
    width         size-xxl + 5
    height        size-xxl + 5
    border-radius 100%
    transform     translate(50%, 50%);
    opacity       1

    &.hide
      opacity 0

    &.red
      background color-pink
      box-shadow button-circle-shadow color-pink

    &.green
      background color-green
      box-shadow button-circle-shadow color-green
    
    &.blue
      background color-blue
      box-shadow button-circle-shadow color-blue
    
    &.yellow
      background  color-yellow
      box-shadow button-circle-shadow color-yellow